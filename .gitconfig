[user]
  name = kazukitash
  email = kazukitash@gmail.com
[core]
  ignorecase = false
  autocrlf = input
  quotepath = false
  excludesfile = ~/.gitignore_global
	editor = vim
[init]
  defaultBranch = main
[pull]
  rebase = true
  ff = only
[pager]
  diff = diff-so-fancy | less --tabs=1,5 -RFX
  show = diff-so-fancy | less --tabs=1,5 -RFX
[color]
  ui = true
[merge]
  ff = false
[push]
  default = current
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
[credential]
	helper = osxkeychain
