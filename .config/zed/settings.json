// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  "auto_update": true,
  "context_servers": {
    "mcp-server-github": {
      "source": "extension",
      "enabled": true,
      "settings": {
        "github_personal_access_token": "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"
      }
    },
    "mcp-server-linear": {
      "source": "custom",
      "command": "npx",
      "args": ["-y", "mcp-remote", "https://mcp.linear.app/sse"]
    }
  },
  "ui_font_weight": 300.0,
  "buffer_font_weight": 300.0,
  "ui_font_features": {
    "calt": 1
  },
  "buffer_font_features": {
    "calt": 1
  },
  "buffer_font_family": "Rounded-L Mgen+ 1mn",
  "features": {
    "edit_prediction_provider": "copilot"
  },
  "icon_theme": {
    "mode": "dark",
    "light": "Catppuccin Latte",
    "dark": "Catppuccin Mocha"
  },
  "agent": {
    "default_model": {
      "provider": "copilot_chat",
      "model": "claude-sonnet-4"
    },
    "play_sound_when_agent_done": true,
    "always_allow_tool_actions": true
  },
  "telemetry": {
    "metrics": false,
    "diagnostics": false
  },
  "agent_font_size": 14,
  "ui_font_size": 14,
  "buffer_font_size": 12,
  "ui_font_family": "Rounded-L Mgen+ 2cp",
  "theme": {
    "mode": "dark",
    "light": "Catppuccin Latte",
    "dark": "Catppuccin Mocha (blue)"
  },
  "collaboration_panel": {
    "button": false
  },
  "tab_size": 2,
  "hard_tabs": false,
  "format_on_save": "on",
  "autosave": "on_focus_change",
  "languages": {
    "Shell Script": {
      "formatter": {
        "external": {
          "command": "shfmt",
          "arguments": ["--filename", "{buffer_path}", "--indent", "2"]
        }
      }
    },
    "Markdown": {
      "enable_language_server": true,
      "format_on_save": "on"
    }
  }
}
