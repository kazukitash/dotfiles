// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  "agent_servers": {
    "codex": {
      
    }
  },
  "ssh_connections": [
    {
      "host": "ktmm",
      "args": [],
      "projects": [],
    },
  ],
  "indent_guides": {
    "coloring": "indent_aware",
  },
  "minimap": {
    "show": "always",
  },
  "terminal": {
    "max_scroll_history_lines": 100000,
  },
  "auto_update": true,
  "context_servers": {
    "mcp-server-github": {
      "command": "/bin/bash",
      "args": ["-c", "$HOME/.config/zed/scripts/github-mcp.sh"],
      "enabled": true,
    },
    "mcp-server-linear": {
      "command": "npx",
      "args": ["-y", "mcp-remote", "https://mcp.linear.app/sse"],
    },
  },
  "ui_font_weight": 300.0,
  "buffer_font_weight": 300.0,
  "ui_font_features": {
    "calt": 1,
  },
  "buffer_font_features": {
    "calt": 1,
  },
  "buffer_font_family": "Rounded-L Mgen+ 1mn",
  "features": {
    "edit_prediction_provider": "copilot",
  },
  "icon_theme": {
    "mode": "dark",
    "light": "Catppuccin Latte",
    "dark": "Catppuccin Mocha",
  },
  "agent": {
    "inline_assistant_model": {
      "provider": "copilot_chat",
      "model": "gpt-5.1-codex",
    },
    "default_model": {
      "provider": "copilot_chat",
      "model": "gpt-5.1-codex-max",
    },
    "play_sound_when_agent_done": true,
    "always_allow_tool_actions": true,
    "notify_when_agent_waiting": "all_screens",
  },

  "file_types": {
    "Dockerfile": ["Dockerfile.*"],
    "Plain Text": ["bun.lock"],
  },
  "telemetry": {
    "metrics": false,
    "diagnostics": false,
  },
  "ui_font_size": 14,
  "buffer_font_size": 12,
  "ui_font_family": "Rounded-L Mgen+ 2cp",
  "theme": {
    "mode": "dark",
    "light": "Catppuccin Latte (blue)",
    "dark": "Catppuccin Mocha (blue)",
  },
  "collaboration_panel": {
    "button": false,
  },
  "tab_size": 2,
  "hard_tabs": false,
  "format_on_save": "on",
  "show_whitespaces": "all",
  "autosave": {
    "after_delay": {
      "milliseconds": 1000,
    },
  },
  "languages": {
    "CSS": {
      "formatter": "prettier",
    },
    "Shell Script": {
      "formatter": {
        "external": {
          "command": "shfmt",
          "arguments": [
            "--filename",
            "{buffer_path}",
            "-i",
            "2",
            "-ci",
            "-sr",
            "-bn",
          ],
        },
      },
    },
    "Markdown": {
      "enable_language_server": true,
      "format_on_save": "on",
      
    },
    "Python": {
      "code_actions_on_format": {
        "source.fixAll.ruff": true,
        "source.organizeImports.ruff": true,
      },
      "tab_size": 4,
    },
    "CSharp": {
      "enable_language_server": true,
      "formatter": "language_server",
    },
    "Rainbow TSV (â­²)": {
      "hard_tabs": true,
    },
  },
}
